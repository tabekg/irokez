        <h4 class="card-header">Теги</h4>
        <div class="list-group list-group-flush">
            {% for tag in tags %}
                <a href="/tag/{{ tag.id }}" class="list-group-item list-group-item-action">{{ tag.tag }}</a>
            {% endfor %}
        </div>
    </div>
{% endblock %}