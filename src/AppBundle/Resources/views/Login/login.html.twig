{% extends "base.html.twig" %}

{% block title %}Вход{% endblock %}

{% block body %}
    {% if errors %}
        <div class="alert alert-danger" role="alert">
            {{ errors.messageKey }}
        </div>
    {% endif %}
    <form action="{{ path('login') }}" method="post">
        <div class="card">
            <div class="card-header">Вход</div>
            <div class="card-body">
                <div class="form-group">
                    <label for="username">Логин:</label>
                    <input type="text" value="{{ username }}" name="_username" id="username" class="form-control">
                </div>
                <div class="form-group">
                    <label for="password">Пароль:</label>
                    <input type="password" name="_password" id="password" class="form-control">
                </div>
                <button class="btn btn-primary ">Вход</button> <a class="ml-3 btn" href="/register">Регистрация</a>
            </div>
        </div>
    </form>
{% endblock %}
