{% extends "base.html.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="card">
        <h4 class="card-header">{{ title }}</h4>
        {% if post %}
            <div class="card-body">
                <div class="mb-2">{{ post.content }}</div>
                <div>{{ post.createdon|date('Y-m-d H:i') }}</div>
                {% if hasAccess %}
                    <div class="mt-3">
                        <a class="btn btn-warning" href="/post/edit/{{ post.id }}">Редактировать</a>
                        <a class="btn btn-danger" href="#" onclick="_delete(event, {{ post.id }})">Удалить</a>
                    </div>
                {% endif %}
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {% if hasAccess %}
        <script type="text/javascript">
            function _delete(e, id){
                e.preventDefault();
                if (confirm('Вы уверены?')){
                    window.location.href = '/post/delete/' + id;
                }
                return false;
            }
        </script>
    {% endif %}
{% endblock %}